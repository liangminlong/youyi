@import "../sent-item/sent-item-template.wxss";

page {
  background-color: #eee;
}

.list-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 96rpx;
}

.toptabBar {
  position: fixed;
  top: 0;
  z-index: 9999;
  width: 100%;
  height: 90rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-top: 6rpx;
  border-bottom: 1px solid #eee;
}

.tabSel {
  height: 90rpx;
  color: #399f76;
}

.tabUnsel {
  height: 90rpx;
  color: #323232;
}

.tab-text {
  font-size: 30rpx;
  line-height: 84rpx;
}

.headerLine {
  background: #399f76;
  height: 6rpx;
}
