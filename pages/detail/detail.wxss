/* pages/detail/detail.wxss */
.view-body{
  width: 100%;
  height: 100%;
  background: #dddddd;
}

.scroll-view{
  width: 100%;
  height: 100%;

  margin-bottom: 120rpx;  
}

/*轮播图 banner  */
.swiper-view{
  width: 100%;
  height: 800rpx;
  background: pink;
}

/* 商品信息 */
.view-section1{
  width: 100%;
  height: 180rpx;
  background:white;

  padding: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.view-section1-text1{

}
.view-section1-text2{
    font-size: 24rpx;
    color: gray;
    margin: 20rpx 0 10rpx 0;
}

.view-section1-text3{
   color: #FF6802;
}

/*用户评论  */
.view-user{
  width: 100%;
  height: 100rpx;
  background: white;

  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #dddddd;
}
.view-user text:nth-child(1){
   margin-left: 30rpx;
   font-size: 34rpx;
}
.view-user text:nth-child(2){
  margin-right: 30rpx;
   color: gray; 
  font-size: 24rpx;
}

/*用户评价列表  */
.view-user-assess{
  display: flex;
  flex-direction: row;
}

.view-left-item{
  flex: 1;
  background: white; 

  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  
}

.view-left-item image{
  width: 90rpx;
  height: 90rpx;
  margin-top: 20rpx;
}

.view-right-item{
  flex: 4;

  padding: 20rpx;
  background: white;
}
.view-right-item text:nth-child(1){
  font-size: 32rpx;
}
.view-right-item text:nth-child(2){
  font-size: 28rpx;
  display: inline-block;
  padding:10rpx 0;
}

.view-right-item text:nth-child(3){
  font-size: 25rpx;
  color: gray;
}


/*商品图文详情  */
.view-goods-detail{
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
  background: white; 
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.view-goods-detail text{
  height: 100%;
  width: 100%;

  display: flex;
  justify-content: center;
  align-items: center;
  color: #989898;
  font-size: 32rpx;
}
.view-goods-detail text:nth-child(1){
  border-right: 3rpx solid #dddddd;
}

.view-goods-detail text:nth-child(2){
}














/*底部的购物车布局  */
.view-car{
  width: 100%;
  height: 120rpx;
  background: white;
  border-top: 1rpx solid #dddddd;
  position: fixed;
  bottom: 0;
  left: 0;

  display: flex;
  flex-direction: row;
}

.view-car-top{
  flex: 1;

  display: flex;
  justify-content: center;
  align-items: center;
}

.view-car-top image{
  width: 110rpx;
  height: 110rpx;
}

.view-car-center{
  flex: 2;
  background: #FF6802;
  display: flex;
  justify-content: center;
  align-items: center;
}
.view-car-bottom{
  background: #E95F3A;
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.view-car-text{
  color: white;
  font-size: 46rpx;
}

