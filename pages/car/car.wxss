/* pages/cate/cate.wxss */
.view-body{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/*内容区域   */
.view-contain{
  flex: 1;
  background: #dddddd;
}

/*购物车列表item  */
.view-car-item{
  width: 100%;
  height: 160rpx;
  background: white;
  border-bottom: 1rpx solid #dddddd;

  display: flex;
  flex-direction: row;
}
.view-car-item1{
  flex:1;

  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
} 
.view-car-item1 checkbox{
  zoom:70%;
}
.view-car-item1 image{
  width: 80rpx;
  height: 80rpx;
}

.view-car-item2{
  flex:2;
  display: flex;
  align-items: center;
}

.view-car-item2 text{
  font-size: 28rpx;
}


.view-car-item3{
    flex:1;
    display: flex;
    align-items: center;
}

.view-car-item3 text:nth-child(1){
  color: #989898;
  font-size:30rpx;
  margin-left: 20rpx; 
}
.view-car-item3 text:nth-child(2){
  color: #FF6802;
  font-size:32rpx;
  margin-left: 20rpx; 
}

















/*底部结算  */
.view-balance{
  width: 100%;
  height: 120rpx;
  /* background: green; */

  display: flex;
  flex-direction: row;
}
.view-balance-item1{
  flex: 0.7;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}
.checked-box{
  font-size:32rpx;
  zoom:90%;
}
.view-balance-item2{
   flex: 1;
   display: flex;
   justify-content: center;
   align-items: center
}
/*合计  */
.view-balance-item2 text:nth-child(1){
}
.view-balance-item2 text:nth-child(2){
    color: #FF6802;
}
.view-balance-item3{
   flex: 1;
   background: #FF6802;
   display: flex;
   justify-content: center;
   align-items: center;
}
.view-balance-item3 text{
  color: white
}